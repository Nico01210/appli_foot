# Configuration pour éviter les problèmes de cache en développement
<IfModule mod_headers.c>
    # Pour les fichiers JS et CSS, empêcher la mise en cache en développement
    <FilesMatch "\.(js|css)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires 0
    </FilesMatch>
    
    # Pour les autres ressources, cache court
    <FilesMatch "\.(html|json)$">
        Header set Cache-Control "max-age=60"
    </FilesMatch>
</IfModule>

# Si mod_headers n'est pas disponible, utiliser mod_expires
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 minute"
    ExpiresByType application/javascript "access plus 1 minute"
    ExpiresByType text/html "access plus 1 minute"
</IfModule>